{
  "name": "library-automation",
  "version": "0.1.3",
  "description": "Masaüstü odaklı kütüphane otomasyon sistemi çekirdeği",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron --no-sandbox .",
    "cli": "node src/index.js",
    "test": "node src/tests/run-tests.js",
    "dist": "electron-builder"
  },
  "keywords": [
    "kutuphane",
    "otomasyon",
    "masaustu"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@zxing/library": "^0.21.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.example.libraryautomation",
    "productName": "LibraryAutomation",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "data/**/*",
      "!src/tests/**"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "asar": true,
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Syte6",
        "repo": "library-automation"
      }
    ]
  }
}
